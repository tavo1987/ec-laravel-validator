{
    "name": "tavo1987/laravel-ec-validator",
    "description": "Laravel validation rules for Ecuadorian identification numbers (CÃ©dula and RUC)",
    "keywords": ["cedula", "ruc", "laravel", "ecuador", "validation"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "tavo1987",
            "email": "tavo198718@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "tavo1987/ec-validador-cedula-ruc": "^2.0.1",
        "illuminate/validation": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },

    "autoload": {
        "psr-4": {
            "Tavo\\EcLaravelValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tavo\\EcLaravelValidator\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },

    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },

    "extra": {
        "laravel": {
            "providers": [
                "Tavo\\EcLaravelValidator\\EcValidatorServiceProvider"
            ]
        }
    }

}
